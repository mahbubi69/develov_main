<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.LoginActivity"
    android:background="@drawable/gradasi_bg2">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_lgn_1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/develov_logo" />

        <TextView
            android:id="@+id/txt_lgn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_lgn_1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:text="Masuk"
            android:textColor="#2054C4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ln_lgn_1"
            android:layout_width="391dp"
            android:layout_height="154dp"
            android:layout_below="@+id/txt_lgn_1"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_lock1"
                android:drawablePadding="10dp"
                android:hint="Kata Sandi"
                android:inputType="textPassword" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_lgn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_lgn_1"
            android:layout_marginLeft="285dp"
            android:text="Lupa kata sandi?"
            android:textColor="#2054C4" />

        <LinearLayout
            android:id="@+id/ln_lgn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_lgn_2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/btn_lgn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bg_biru"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ln_lgn_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Belum punya akun? Daftar" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>