<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.PendaftaranBerhasilActivity">

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Pendaftaranmu berhasil"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_1"
        android:text="Terima kasih telah menjadi bagian dari DEVELOV!"
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_2"
        android:src="@drawable/pendaftaran_berhasil"/>

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="311dp"
        android:layout_height="66dp"
        android:layout_below="@+id/img_1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Lanjutkan pencarian mentormu dan ekspresikan kemampuan desain grafismu di dalam komunitas!"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_3"
        android:backgroundTint="@color/bg_biru"
        app:cornerRadius="16dp"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

</RelativeLayout>