<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.UploadBuktiActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Pembayaran"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_margin="20dp"
        android:text="Transfer Bank/m-Banking"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_2"
        app:cardCornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D8E1F5">

        <RelativeLayout
            android:id="@+id/ln_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_cd">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/bank_bni"/>

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/img_1"
                android:text="Bank BNI"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="25dp"
                android:text="Rp. 80.000"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/img_1"
                android:background="#D8E1F5"/>

            <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:text="6293847658"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="130dp"
                android:layout_toRightOf="@id/txt_4"
                android:src="@drawable/ic_copy" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cd_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Upload Bukti Pembayaran"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_2"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_5"
        app:cardCornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="#D8E1F5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btn_up"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="200dp"
                android:src="@drawable/ic_rp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_up"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="+"
                android:textSize="20dp"
                android:background="@drawable/outline_btn"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_konfir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/cd_2"
        android:text="Konfirmasi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:backgroundTint="@color/bg_biru"
        app:cornerRadius="16dp"/>


</RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>