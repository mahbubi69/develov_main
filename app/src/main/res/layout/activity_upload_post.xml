<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.UploadPostActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_1"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Unggah postinganmu"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edt_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cd_1"
        android:hint="Tulis judulmu disini..."
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"/>

    <EditText
        android:id="@+id/edt_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_judul"
        android:hint="Tulis keterangan postinganmu disini..."
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="270dp"/>

    <TextView
        android:id="@+id/txt_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/edt_deskripsi"/>

    <ImageView
        android:id="@+id/btn_file"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/edt_deskripsi"
        android:layout_toLeftOf="@id/btn_kirim"
        android:layout_marginRight="30dp"
        android:layout_marginTop="205dp"
        android:src="@drawable/ic_lampiran"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kirim"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_deskripsi"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginRight="30dp"
        android:text="Kirim"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/outline"/>



</RelativeLayout>