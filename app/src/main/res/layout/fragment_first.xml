<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.FirstScreen">


    <ImageView
        android:id="@+id/img_1"
        android:layout_width="245dp"
        android:layout_height="220dp"
        android:src="@drawable/onboarding_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="254dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:text="Jelajahi Develov dan Terhubung dengan Designer Garafis Lain"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="@+id/img_1"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/img_1"
        app:layout_constraintTop_toBottomOf="@+id/img_1" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="327dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Temukan petualangan desainmu di Develov!
Bergabunglah dengan komunitas designer grafis yang penuh semangat dan kreatif."
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_1"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/txt_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_1" />

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="lewati"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/txt_2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txt_2"
        app:layout_constraintTop_toBottomOf="@+id/txt_2" />
</androidx.constraintlayout.widget.ConstraintLayout>